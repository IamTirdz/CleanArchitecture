{
  "$schema": "http://json.schemastore.org/template",
  "author": "",
  "classifications": [
    "API",
    "Cloud",
    "Service",
    "Web",
    "Web API",
    "Clean Architecture"
  ],
  "identity": "Clean.Architecture.Solution.WebAPI",
  "groupIdentity": "Clean.Architecture.Solution.WebAPI",
  "name": "Clean Architecture",
  "description": "A project template for creating clean architecture solution with an example controller for a RESTful API.",
  "shortName": "cleanarch",
  "sourceName": "Clean.Architecture",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "preferNameDirectory": true,
  "symbols": {
    "framework": {
      "displayName": "Framework",
      "type": "parameter",
      "description": "Target Framework",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net8.0",
		  "description": "Use .NET 8.0"
        },
        {
          "choice": "net9.0",
		  "description": "Use .NET 9.0"
        }
      ],
      "defaultValue": "net8.0",
      "replaces": "{TargetFramework}"
    }
  },
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        "**/README.md",
        "**/nuget.config",
        "**/LICENSE",
        "**/.gitattributes",
        "**/.gitignore",
        "**/*.nupkg",
        "**/[Bb]in/**",
        "**/[Oo]bj/**",
        ".template.config/**/*",
        ".vs/**/*",
        "**/*.filelist",
        "**/*.user",
        "**/*.lock.json",
        "**/.git/**",
        "**/.github/**",
        "*.nuspec",
        "**/node_modules/**"
      ]
    }
  ]
}